<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".ProfilActivity3">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#ffffff"
                android:id="@+id/judul"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/upload"/>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="20dp"
            android:padding="20dp"
            android:background="@drawable/custum_btn"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgktp"
                android:layout_gravity="center"
                android:background="@drawable/imgnot"
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:scaleType="fitXY"/>
            <Button
                android:id="@+id/btnktp"
                android:background="@drawable/button_oval"
                android:text="Upload Foto KTP"
                android:layout_marginTop="0dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="20dp"
            android:padding="20dp"
            android:background="@drawable/custum_btn"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgphoto"
                android:layout_gravity="center"
                android:background="@drawable/imgnot"
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:scaleType="fitXY"/>
            <Button
                android:id="@+id/btnphoto"
                android:background="@drawable/button_oval"
                android:text="Upload Foto Anda"
                android:layout_marginTop="0dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tglsekarang"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_sebelumnya"
                android:layout_width="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:text="SEBELUMNYA"
                android:background="@drawable/button_oval"/>
            <Button
                android:id="@+id/btn_simpan"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:text="SIMPAN"
                android:background="@drawable/button_oval"/>
        </LinearLayout>
    </LinearLayout>

    </ScrollView>
</RelativeLayout>